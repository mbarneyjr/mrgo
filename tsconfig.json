{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": [
      "backend/types", 
      "integration-tests/types", 
      "frontend/types", 
      "node_modules/@types",
    ],
  },
  "include": [
    "integration-tests/**/*",
    "backend/**/*",
    "frontend/**/*",
    "./.eslintrc.js",
  ],
}
