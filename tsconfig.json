{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node16",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": [
    "integration-tests/**/*.js",
    "src/**/*.js",
    "frontend/**/*.mjs",
  ],
}