{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": false,
    "noEmit": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": [
    // "**/*.js",
    "integration-tests/**/*.js",
    "src/**/*.js",
  ],
}